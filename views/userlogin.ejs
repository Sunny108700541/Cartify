<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }
        .container {
            display: flex;
            justify-content: space-around;
            align-items: center;
            background: linear-gradient(to right, #538b47 40%, #306c36 100%); 
            height: 100vh;
            width: 100vw;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            color: white;
        }
        .main {
            height: 100%;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 1rem;
            background-color: #ffffff;
            position: relative;
            overflow: hidden;
            /* border-radius: 2rem; */
        }
        
        /* Slider styles */
        .slider-container {
            width: 100%;
            height: 100%;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }
        
        .slider {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .slide {
            position: absolute;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: transform 0.5s ease;
            transform: translateX(100%); /* Default position is off-screen to the right */
            visibility: hidden; /* Hide slides by default */
        }
        
        .slide.active {
            transform: translateX(0);
            visibility: visible; /* Show active slide */
            z-index: 2; /* Ensure active slide is on top */
        }
        
        .slide img {
            height: 50%;
            width: auto;
            max-width: 100%;
            object-fit: contain;
        }
        
        /* Slider navigation */
        .slider-nav {
            position: absolute;
            bottom: 20px;
            left: 0;
            width: 100%;
            display: flex;
            justify-content: center;
            gap: 12px;
            z-index: 5;
        }
        
        .slider-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: rgba(91, 120, 88, 0.5);
            cursor: pointer;
            border: none;
            transition: background-color 0.3s ease;
        }
        
        .slider-dot.active {
            background-color: #00b748;
        }

        @keyframes zoom-out {
            0% {height: 85%;}
            100% {height: 95%;}
        }
        @keyframes shake {
            0% { transform: translateX(0); }
            /* 25% { transform: translateX(-5px); } */
            50% { transform: translateX(5px); }
            /* 75% { transform: translateX(-5px); } */
            100% { transform: translateX(0); }
        }
        .right {
            padding: 1rem;
            height: 100%;
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 1.5rem;
        }
        .logo {
            padding: 0rem;
            height: 20%;
            width: auto;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: row;
            gap: 1rem;
        }
        .logo img {
            height: 40%;
            width: auto;
            max-height: 3rem;
        }
        .right p {
            padding: 0rem;
            height: auto;
            font-size: 2rem;
            font-family: cursive;
            text-align: center;
        }
        .logo h1 {
            padding: 0rem;
            font-size: 3rem;
        }
        .login-btn {
            height: auto;
            width: 60%;
            max-width: 300px;
            font-size: 1.15rem;
            display: flex;
            justify-content: center;
            flex-direction: row;
            align-items: center;
            gap: 1rem;
            border-radius: 0.5rem;
            background-color: white;
            border: 4px solid #00b748;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            color: #00b748;
            padding: 0.8rem;
            cursor: pointer;
        }
        .login-btn img {
            height: 1.8rem;
            width: auto;
            /* filter: drop-shadow(0px 0px 10px rgba(0, 0, 0, 0.75)); */
        }
        .login-btn a {
            text-decoration: none;
            color: #00b748;
        }
        .login-btn:hover {
            /* background-color: #00b748; */
            /* color: white; */
            box-shadow: 0px 0px 10px 4px rgba(0, 183, 72, 0.75);
        }

        /* Responsive styles */
        @media screen and (max-width: 768px) {
            .container {
                flex-direction: column;
                height: auto;
                min-height: 100vh;
            }
            .main {
                height: 50vh;
            }
            .slide img {
                height: auto;
                max-height: 90%;
            }
            .slide img:hover {
                height: auto;
                max-height: 95%;
            }
            .right {
                height: auto;
                min-height: 50vh;
            }
            .logo {
                height: auto;
                margin-bottom: 1rem;
            }
            .logo h1 {
                font-size: 2.5rem;
            }
            .right p {
                font-size: 1.8rem;
                margin-bottom: 1rem;
            }
            .login-btn {
                width: 80%;
                font-size: 1.3rem;
            }
        }

        @media screen and (max-width: 480px) {
            .main {
                height: 40vh;
            }
            .logo h1 {
                font-size: 2rem;
            }
            .right p {
                font-size: 1.5rem;
            }
            .login-btn {
                width: 90%;
                font-size: 1.1rem;
                padding: 0.6rem;
            }
            .login-btn img {
                height: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="main">
            <div class="slider-container">
                <div class="slider">
                    <div class="slide">
                        <img src="/image/undraw_online-shopping_hgf6-removebg-preview.png" alt="Product 1">
                    </div>
                    <div class="slide">
                        <img src="/image/undraw_shopping-app_b80f__1_-removebg-preview.png" alt="Product 2">
                    </div>
                    <div class="slide">
                        <img src="/image/undraw_shopping_a55o-removebg-preview.png" alt="Product 3">
                    </div>
                    <div class="slide">
                        <img src="/image/undraw_successful-purchase_p2fz-removebg-preview.png" alt="Product 4">
                    </div>
                </div>
                <div class="slider-nav">
                    <button class="slider-dot" data-index="0"></button>
                    <button class="slider-dot" data-index="1"></button>
                    <button class="slider-dot" data-index="2"></button>
                    <button class="slider-dot" data-index="3"></button>
                </div>
            </div>
        </div>
        <div class="right">
            <div class="logo">
                <img src="/image/carticon.png" alt="">
                <h1>Cartify</h1>
            </div>
            <p>Shop Smarter, Faster, Easier!</p>
            <button class="login-btn">
                    <img src="/image/gooleicon-removebg-preview.png" alt="">
                    <a href="/auth/google">Continue with google</a>

            </button>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const slides = document.querySelectorAll('.slide');
            const dots = document.querySelectorAll('.slider-dot');
            let currentIndex = 0;
            let slideInterval;
            
            // Initialize the slider
            function initSlider() {
                // Set initial slide
                slides[0].style.transform = 'translateX(0)';
                slides[0].classList.add('active');
                slides[0].style.visibility = 'visible';
                
                // Set initial dot
                dots[0].classList.add('active');
            }
            
            // Show specific slide
            function showSlide(index) {
                // Don't do anything if trying to show the current slide
                if (index === currentIndex) return;
                
                // Determine direction (left or right)
                const goingForward = index > currentIndex || (currentIndex === slides.length - 1 && index === 0);
                
                // Remove active class from all dots
                dots.forEach(dot => {
                    dot.classList.remove('active');
                });
                
                // Add active class to current dot
                dots[index].classList.add('active');
                
                // Prepare the new slide for entrance
                const newSlide = slides[index];
                const currentSlide = slides[currentIndex];
                
                // Position the new slide before animation
                newSlide.style.transform = goingForward ? 'translateX(100%)' : 'translateX(-100%)';
                newSlide.style.visibility = 'visible';
                
                // Force a reflow to ensure the browser registers the position
                void newSlide.offsetWidth;
                
                // Mark current slide for exit
                currentSlide.classList.remove('active');
                currentSlide.style.transform = goingForward ? 'translateX(-100%)' : 'translateX(100%)';
                
                // Bring in new slide
                newSlide.classList.add('active');
                newSlide.style.transform = 'translateX(0)';
                
                // Hide old slide after transition completes
                setTimeout(() => {
                    if (!currentSlide.classList.contains('active')) {
                        currentSlide.style.visibility = 'hidden';
                    }
                }, 500); // Match this to your transition duration
                
                // Update current index
                currentIndex = index;
            }
            
            // Next slide function
            function nextSlide() {
                let nextIndex = currentIndex + 1;
                if (nextIndex >= slides.length) {
                    nextIndex = 0; // Loop back to first slide
                }
                showSlide(nextIndex);
            }
            
            // Setup click events for dots
            dots.forEach(dot => {
                dot.addEventListener('click', function() {
                    const index = parseInt(this.getAttribute('data-index'));
                    showSlide(index);
                    
                    // Reset the interval timer
                    clearInterval(slideInterval);
                    slideInterval = setInterval(nextSlide, 2000);
                });
            });
            
            // Initialize and start the slider
            initSlider();
            slideInterval = setInterval(nextSlide, 2000);
        });
    </script>
</body> 
</html>